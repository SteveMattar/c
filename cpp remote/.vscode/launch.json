    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "preLaunchTask": "(gcc) Build All",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/hello/bin/hello",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\Strawberry\\c\\bin\\gdb.exe"
            },
            "miDebuggerServerAddress": "localhost:9999",
            "setupCommands": [
